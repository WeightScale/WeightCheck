<?xml version="1.0" encoding="UTF-8"?>
<project name="weightcheck" default="all">
  
  
  <property file="weightcheck.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.tox/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.android_api_17_platform" value="${jdk.home.android_api_17_platform}/../../Program Files/Java/jdk1.8.0_65/bin"/>
  <path id="jdk.classpath.android_api_17_platform">
    <fileset dir="${jdk.home.android_api_17_platform}">
      <include name="platforms/android-17/android.jar"/>
      <include name="platforms/android-17/data/res"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8.0.65}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8.0.65}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8.0.65"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.bootloader_avr.classpath">
    <pathelement location="${basedir}/../../bootloader_avr/out/artifacts/bootloader_avr_jar/bootloader_avr.jar"/>
  </path>
  
  <path id="library.libs.classpath">
    <pathelement location="C:/android/sdk/extras/android/support/v4/android-support-v4.jar"/>
    <pathelement location="C:/android/sdk/extras/google/google_play_services_froyo/libproject/google-play-services_lib/libs/google-play-services.jar"/>
    <pathelement location="${basedir}/libs/google-api-client-1.20.0.jar"/>
    <pathelement location="${basedir}/libs/google-api-client-android-1.20.0.jar"/>
    <pathelement location="${basedir}/libs/google-http-client-1.20.0.jar"/>
    <pathelement location="${basedir}/libs/google-http-client-jackson-1.20.0.jar"/>
    <pathelement location="${basedir}/libs/google-http-client-jackson2-1.20.0.jar"/>
    <pathelement location="${basedir}/libs/google-oauth-client-1.20.0.jar"/>
    <pathelement location="${basedir}/libs/jackson-core-2.1.3.jar"/>
    <pathelement location="${basedir}/libs/jackson-core-2.5.3.jar"/>
    <pathelement location="${basedir}/libs/jackson-core-asl-1.9.13.jar"/>
    <pathelement location="${basedir}/../../library/activation.jar"/>
    <pathelement location="${basedir}/../../library/additionnal.jar"/>
    <pathelement location="${basedir}/../../library/androidmarketapi-0.6.jar"/>
    <pathelement location="${basedir}/../../library/gdata-core-1.0.jar"/>
    <pathelement location="${basedir}/../../library/gdata-spreadsheet-3.0.jar"/>
    <pathelement location="${basedir}/../../library/gson-2.1.jar"/>
    <pathelement location="${basedir}/../../library/guava-11.0.2.jar"/>
    <pathelement location="${basedir}/../../library/javax.mail-1.5.2.jar"/>
    <pathelement location="${basedir}/../../library/jsr305.jar"/>
    <pathelement location="${basedir}/../../library/protobuf-java-2.4.1.jar"/>
  </path>
  
  <path id="library.scalemodule.classpath">
    <pathelement location="${basedir}/../../ScaleModule/out/artifacts/ScaleModule_jar/ScaleModule.jar"/>
  </path>
  
  <path id="library.smscommander.classpath">
    <pathelement location="${basedir}/../../SMSCommander/out/artifacts/SMSCommander_jar/SMSCommander.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_weightcheck.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.weightcheck" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.weightcheck" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>