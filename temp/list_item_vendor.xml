<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content" android:gravity="left|center"
              android:orientation="horizontal" android:layout_width="fill_parent"
              android:padding="@dimen/padding">
    <TextView android:layout_height="fill_parent" android:textSize="@dimen/text_large" android:layout_width="0dp"
              android:text="" android:id="@+id/topText"
              android:gravity="center_vertical|left"
              android:textColor="@android:color/black"
              android:clickable="true" android:longClickable="true" android:layout_weight="1"/>
    <ImageButton
            android:id="@+id/atomPay_removePay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:onClick="removeAtomPayOnClickHandler"
            android:src="@android:drawable/ic_menu_delete"
            android:focusable="false" android:focusableInTouchMode="false"/>
</LinearLayout>